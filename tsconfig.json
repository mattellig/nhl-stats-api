{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": ".",
        "esModuleInterop": true,
        "lib": [
            "ESNext"
        ],
        "module": "ES6",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": "dist",
        "target": "ES5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.ts",
        "test"
    ]
}