{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "module": "ES6",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "ES5"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts",
    "./test/**"
  ]
}