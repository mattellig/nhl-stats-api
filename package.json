{
  "name": "nhl-stats-api",
  "version": "1.1.1",
  "description": "A Promise-based wrapper for the NHL stats API.",
  "license": "MIT",
  "repository": "https://github.com/mattellig/nhl-stats-api.git",
  "author": "Matt Ellig",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && run-p build:*",
    "build:cjs": "esbuild ./src/index.ts --bundle --minify --external:cross-fetch --platform=node --outfile=dist/index.js",
    "build:esm": "esbuild ./src/index.ts --bundle --minify --external:cross-fetch --platform=neutral --format=esm --outfile=dist/index.mjs",
    "build:types": "tsc --project ./tsconfig.build.json",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "prepack": "npm run build",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "dependencies": {
    "cross-fetch": "^3.1.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "msw": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
